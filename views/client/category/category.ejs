<div class="content-area">
  <div class="container content">
    <div class="row">
      <div class="col-lg-8 col-md-12 content-left">
        <div class="row">
          <div class="col-lg-12 col-md-12 pr-0 pl-0">
            <div class="search-left">
              <div class="title-right">
                search blog
              </div>
              <div class="contentsub-right">
                <form action="/search" action="GET">
                  <input type="text" placeholder="Search..." name="search" id="search"/>
                  <button
                    type="submit"
                    style="border: none; background-color: #fff;"
                  >
                    <i class="fa fa-search fa-2x"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>

          <% allPostsTitle.forEach((el,indx) => { %>
            <div class="col-lg-12 col-md-12 card <% if(indx > 0){ %> <%= "mt-2" %> <% } %>">
              <div class="card-img" >
                <a href="/post/<%= el._id %>">
                  <img src="/img/logo/<%= el.logo %>" alt="" style="width: 350px;height: 250px;" />
                </a>
              </div>
              <div class="card-content">
                <a href="/post/<%= el._id %>">
                  <h5>
                    <%= el.title %>
                  </h5>
                </a>
            
                <p class="text-secondary mb-0">
                  by <span>Noob Boy</span>&ensp;
                  <i class="fa fa-chevron-right"></i>
                  &ensp;on <%= el.date %>
                </p>
                <p class="card-content-sub">
                  <%= el.contentSub.substr(0,150) %>...
                </p>
                <a href="/post/<%= el._id %>">
                  Continue Read <i class="fa fa-arrow-right text-success"></i>
                </a>
              </div>
            </div>
          <% }); %> 

          <% if(urlActive.split("?")[0] == "search"){ %>
            <ul class="paginations">
              <li>
                <a href="?search=<%=keyword%>&page=1"><i class="fa fa-fast-backward text-primary"></i></a>
              </li>
              <li>
                <a href="?search=<%=keyword%>&page=<%=+currentPage - 1%>"><i
                    class="fa fa-chevron-left text-primary"></i></a>
              </li>
              <% for(let i = 1; i <= allPage; i++ ){ %>
              <li class="<% if(i == currentPage){ %> <%="active"%> <% } %>"><a
                  href="?search=<%=keyword%>&page=<%=i%>"><%= i %> </a></li>
              <% } %>
              <li>
                <a href="?search=<%=keyword%>&page=<%=+currentPage + 1%>"><i
                    class="fa fa-chevron-right text-primary"></i></a>
              </li>
              <li>
                <a href="?search=<%=keyword%>&page=<%=allPage%>"><i
                    class="fa fa-fast-forward text-primary"></i></a>
              </li>
            </ul>
          <% }else{ %>
            <ul class="paginations">
              <li>
                <a href="/category/<%= urlActive.split("?")[0] %>?page=1"><i class="fa fa-fast-backward text-primary"></i></a>
              </li>
              <li>
                <a href="/category/<%= urlActive.split("?")[0] %>?page=<%=+currentPage - 1%>"><i
                    class="fa fa-chevron-left text-primary"></i></a>
              </li>
              <% for(let i = 1; i <= allPage; i++ ){ %>
              <li class="<% if(i == currentPage){ %> <%="active"%> <% } %>"><a
                  href="/category/<%= urlActive.split("?")[0] %>?page=<%=i%>"><%= i %> </a></li>
              <% } %>
              <li>
                <a href="/category/<%= urlActive.split("?")[0] %>?page=<%=+currentPage + 1%>"><i
                    class="fa fa-chevron-right text-primary"></i></a>
              </li>
              <li>
                <a href="/category/<%= urlActive.split("?")[0] %>?page=<%=allPage%>"><i
                    class="fa fa-fast-forward text-primary"></i></a>
              </li>
            </ul>
          <% } %> 
          
        </div>
      </div>
      <%-include("../patials/content-right")%>
    </div>
  </div>
</div>
