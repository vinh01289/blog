<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <h4 class="text-center">Add Post</h4>
    </div>
</div>

<div class="row mt-4">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <form action="/admin/post/process-add" method="POST" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="title">Title</label>
                    <input class="form-control" type="text" required id="title" name="title">
                </div>
                <div class="form-group col-lg-6">
                    <label for="logo">Logo</label>
                    <input class="d-block" type="file" name="logo" id="logo">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="nametitle">Choose title of post</label>
                    <select name="nametitle" id="nametitle" class="custom-select">
                        <% listTitle.forEach(el => { %>
                            <option value=<%= el._id%>><%=el.name%></option>
                        <% }); %>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-12 col-md-12">
                    <label for="contentsub">Content Sub</label><br>
                    <textarea name="contentsub" id="contentsub" cols="120" rows="5"></textarea>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-12 col-md-12">
                    <label for="content">Content</label>
                    <textarea name="content" id="content" cols="120" rows="10"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <a href="/admin/posts" class="btn btn-success mt-3">Back</a>
    </div>
</div>